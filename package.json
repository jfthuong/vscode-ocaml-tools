{
    "name": "ocaml-syntax",
    "displayName": "Syntax for ocp-build configuration",
    "description": "Additional syntax highlighting for OCaml & Ocaml tools",
    "publisher": "jfthuong",
    "version": "0.1.0",
    "engines": {
        "vscode": "^1.44.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "icon": "images/ocaml_logo.png",
    "galleryBanner": {
        "color": "#293845",
        "theme": "dark"
    },
    "keywords": [
        "language",
        "ocaml",
        "highlight",
        "syntax"
    ],
    "homepage": "http://niclineseg.ansys.com/jthuong/ocp-syntax",
    "repository": {
        "type": "git",
        "url": "git@niclineseg.ansys.com:jthuong/ocp-syntax.git"
    },
    "bugs": {
        "url": "http://niclineseg.ansys.com/jthuong/ocp-syntax/issues",
        "email": "jean-francois.thuong@ansys.com"
    },
    "contributes": {
        "languages": [
            {
                "id": "ocp-build",
                "aliases": [
                    "ocp-build",
                    "ocp"
                ],
                "extensions": [
                    ".ocp"
                ],
                "configuration": "./language-ocaml.json"
            },
            {
                "id": "ocamllex",
                "aliases": [
                    "OCamllex",
                    "ocamllex"
                ],
                "extensions": [
                    ".mll"
                ],
                "configuration": "./language-ocaml.json"
            },
            {
                "id": "ocamlyacc",
                "aliases": [
                    "OCamlyacc",
                    "ocamlyacc"
                ],
                "extensions": [
                    ".mly"
                ],
                "configuration": "./language-ocaml.json"
            }
        ],
        "grammars": [
            {
                "language": "ocp-build",
                "scopeName": "source.ocp",
                "path": "./syntaxes/ocp.tmLanguage.json"
            },
            {
                "language": "ocamllex",
                "scopeName": "source.ocamllex",
                "path": "./syntaxes/Ocamllex.tmLanguage.json"
            },
            {
                "language": "ocamlyacc",
                "scopeName": "source.ocamlyacc",
                "path": "./syntaxes/menhir.tmLanguage"
            }
        ]
    },
    "devDependencies": {
        "js-yaml": "^3.13.1"
    }
}
